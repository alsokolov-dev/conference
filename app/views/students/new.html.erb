<% provide(:title, 'Registration') %>
<h1>Registration</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student) do |f| %>
        <%= render 'shared/error_messages_student' %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :affiliation %>
        <%= f.text_field :affiliation, class: 'form-control' %>

        <%= f.label :country %>
        <%= f.text_field :country, class: 'form-control' %>

        <%= f.label :student, 'Student (Bachelor, Masters, PhD)' %>
        <%= f.select :student, ['yes', 'no'], class: 'form-control' %>

        <%= f.label :age %>
        <%= f.number_field :age, class: 'form-control' %>

        <%= f.label :background %>
        <%= f.text_area :background, class: 'form-control' %>

        <%= f.label :abstract %>
        <%= f.text_area :abstract, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>