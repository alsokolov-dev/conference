<% provide(:title, "#{@user.first_name} #{@user.last_name}") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= "#{@user.first_name} #{@user.last_name}" %>
        </br>
        <h2>
          <%= @user.presentation_name %> <br>
          <%= @user.organization_name %><br>
          <%= @user.department %>
        </h2>
      </h1>
    </section>
  </aside>
</div>